      <div id="issues-container">
        <% if @issues && @issues.any? %>
          <% 
            # è¦ªãƒã‚±ãƒƒãƒˆã¨å­ãƒã‚±ãƒƒãƒˆã‚’åˆ†é›¢
            parent_issues = @issues.select { |issue| issue.parent_id.nil? }
            child_issues_map = @issues.select { |issue| issue.parent_id.present? }.group_by { |issue| issue.parent_id }
            
            # å†å¸°çš„ã«éšå±¤ã‚’æ§‹ç¯‰
            def build_tree(issue_id, child_issues_map)
              children = child_issues_map[issue_id] || []
              children.map do |child|
                {
                  issue: child,
                  children: build_tree(child.id, child_issues_map)
                }
              end
            end
            
            # å†å¸°çš„ã«ãƒ„ãƒªãƒ¼ã‚’è¡¨ç¤ºï¼ˆä»»æ„ã®æ·±ã•ã«å¯¾å¿œï¼‰
            def render_tree_node(node, depth = 0, is_root = false)
              issue = node[:issue]
              children = node[:children] || []
              has_children = children.any?
              
              # ã‚¤ãƒ³ãƒ‡ãƒ³ãƒˆè¨ˆç®—ï¼ˆå„éšå±¤30pxï¼‰
              margin_left = depth * 30
              indent_str = "  " * depth + "â””â”€"
              
              html = ""
              html << %(<div class="issue-item #{is_root ? 'issue-parent' : 'issue-child'} #{'has-children' if has_children}" )
              html << %(data-issue-id="#{issue.id}" )
              html << %(data-issue-subject="#{h(issue.subject)}" )
              html << %(draggable="true" )
              html << %(title="ãƒ‰ãƒ©ãƒƒã‚°ã—ã¦è¦ªå­é–¢ä¿‚ã‚’è¨­å®š" )
              html << %(style="cursor: move; margin-left: #{margin_left}px;">)
              html << %(<div class="issue-info">)
              
              if has_children
                html << %(<span class="tree-toggle" data-parent-id="#{issue.id}">â–¼</span>)
              else
                html << %(<span class="tree-toggle-placeholder"></span>)
              end
              
              unless is_root
                html << %(<span class="tree-indent">#{indent_str}</span>)
              end
              
              html << %(<span class="issue-id">##{issue.id}</span>)
              html << %(<span class="issue-subject">#{h(issue.subject)}</span>)
              html << %(<span class="issue-status">#{issue.status.name}</span>)
              html << %(</div>)
              
              if has_children
                html << %(<div class="children-count">)
                html << %(<span class="status-text">#{l(:text_children_count, count: children.count)}</span>)
                html << %(</div>)
              end
              
              html << %(</div>)
              
              # å­ãƒã‚±ãƒƒãƒˆã‚’å†å¸°çš„ã«è¡¨ç¤º
              if has_children
                html << %(<div class="issue-children-tree" data-parent-id="#{issue.id}" style="display: block;">)
                children.each do |child_node|
                  html << render_tree_node(child_node, depth + 1, false)
                end
                html << %(</div>)
              end
              
              html
            end
          %>
          <% parent_issues.each do |parent_issue| %>
            <% children_tree = build_tree(parent_issue.id, child_issues_map) %>
            <div class="issue-tree">
              <!-- è¦ªãƒã‚±ãƒƒãƒˆ -->
              <div class="issue-item issue-parent <%= 'has-children' if children_tree.any? %>" 
