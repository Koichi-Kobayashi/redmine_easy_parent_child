                </div>
                <% if children_tree.any? %>
                  <div class="children-count">
                    <span class="status-text"><%= l(:text_children_count, count: children_tree.count) %></span>
                  </div>
                <% end %>
              </div>
              
              <!-- å­ãƒã‚±ãƒƒãƒˆï¼ˆå†å¸°çš„ã«è¡¨ç¤ºï¼‰ -->
              <% if children_tree.any? %>
                <div class="issue-children-tree" data-parent-id="<%= parent_issue.id %>" style="display: block;">
                  <% children_tree.each do |child_node| %>
